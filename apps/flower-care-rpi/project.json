{
  "name": "flower-care-rpi",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/flower-care-rpi/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "development",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/flower-care-rpi",
        "format": [
          "cjs"
        ],
        "main": "apps/flower-care-rpi/src/main.ts",
        "tsConfig": "apps/flower-care-rpi/tsconfig.app.json",
        "assets": [
          "apps/flower-care-rpi/src/assets",
          "apps/flower-care-rpi/Dockerfile"
        ],
        "generatePackageJson": true,
        "bundle": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        },
        "external": [
          "@flower-care/noble"
        ]
      },
      "configurations": {
        "development": {
          "main": "apps/flower-care-rpi/src/main.local.ts"
        },
        "production": {
          "generateLockfile": true,
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "flower-care-rpi:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "flower-care-rpi:build:development"
        },
        "production": {
          "buildTarget": "flower-care-rpi:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/flower-care-rpi/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/flower-care-rpi/jest.config.ts"
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "defaultConfiguration": "development",
      "options": {
        "engine": "docker",
        "cache-from": [
          "type=gha"
        ],
        "cache-to": [
          "type=gha,mode=max"
        ],
        "platforms": [
          "linux/arm64"
        ],
        "metadata": {
          "images": [
            "ghcr.io/battlefieldnoob/flower-care-rpi"
          ],
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=sha,prefix=sha-",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}"
          ]
        },
        "build-args": [
          "CONFIG=production"
        ],
        "push": true
      },
      "configurations": {
        "development": {
          "platforms": [
            "linux/amd64"
          ],
          "metadata": {
            "images": [
              "flower-care-rpi",
              "ghcr.io/battlefieldnoob/flower-care-rpi"
            ]
          },
          "build-args": [
            "CONFIG=development"
          ],
          "push": false
        },
        "production": {
        }
      }
    }
  },
  "tags": []
}
