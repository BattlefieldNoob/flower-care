{
  "name": "flower-care-rpi",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/flower-care-rpi/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx-bun/nx:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "entrypoints": ["apps/flower-care-rpi/src/main.ts"],
        "outputPath": "dist/apps/flower-care-rpi",
        "tsConfig": "apps/flower-care-rpi/tsconfig.app.json",
        "smol": false,
        "minify": true,
        "bun": true,
        "external": [
          "miflora"
        ],
        "sourcemap": "external",
        "assets": [
          "apps/flower-care-rpi/src/assets"
        ]
      },
      "configurations": {
        "development": {
          "minify": false,
          "sourcemap": "inline",
          "splitting": true
        },
        "production": {
        }
      }
    },
    "serve": {
      "executor": "@nx-bun/nx:run",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "flower-care-rpi:build",
        "tsConfig": "apps/flower-care-rpi/tsconfig.app.json",
        "watch": true,
        "bun": true,
        "smol": false
      },
      "configurations": {
        "development": {
          "buildTarget": "flower-care-rpi:build:development"
        },
        "production": {
          "buildTarget": "flower-care-rpi:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/flower-care-rpi/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/flower-care-rpi/jest.config.ts"
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ],
      "options": {
        "engine": "docker",
        "cache-from": [
          "type=gha"
        ],
        "cache-to": [
          "type=gha,mode=max"
        ],
        "platforms": [
          "linux/amd64",
          "linux/arm64"
        ],
        "metadata": {
          "images": [
            "ghcr.io/battlefieldnoob/flower-care-rpi"
          ],
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=sha,prefix=sha-",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}"
          ]
        },
        "push": true
      },
      "configurations": {
        "development": {
          "platforms": [
            "linux/amd64"
          ],
          "metadata": {
            "images": [
              "flower-care-rpi",
              "ghcr.io/battlefieldnoob/flower-care-rpi"
            ]
          },
          "push": false
        },
        "production": {}
      }
    }
  },
  "tags": []
}
