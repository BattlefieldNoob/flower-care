{
  "name": "flower-care-rpi",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/flower-care-rpi/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/flower-care-rpi",
        "format": ["esm", "cjs"],
        "main": "apps/flower-care-rpi/src/main.ts",
        "tsConfig": "apps/flower-care-rpi/tsconfig.app.json",
        "assets": ["apps/flower-care-rpi/src/assets"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "generateLockfile": true,
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "flower-care-rpi:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "flower-care-rpi:build:development"
        },
        "production": {
          "buildTarget": "flower-care-rpi:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/flower-care-rpi/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/flower-care-rpi/jest.config.ts"
      }
    },
    "docker-build-arm": {
      "dependsOn": ["clean", "build"],
      "command": "docker build --platform=linux/arm64 -f apps/flower-care-rpi/Dockerfile . -t flower-care-rpi"
    },
    "docker-build-amd": {
      "dependsOn": ["clean", "build"],
      "command": "docker build --platform=linux/amd64 -f apps/flower-care-rpi/Dockerfile . -t flower-care-rpi"
    }
  },
  "tags": []
}
