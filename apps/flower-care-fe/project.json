{
  "name": "flower-care-fe",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "flower-care",
  "sourceRoot": "apps/flower-care-fe/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/flower-care-fe",
        "index": "apps/flower-care-fe/src/index.html",
        "main": "apps/flower-care-fe/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/flower-care-fe/tsconfig.app.json",
        "assets": [
          "apps/flower-care-fe/src/favicon.ico",
          "apps/flower-care-fe/src/assets"
        ],
        "styles": ["apps/flower-care-fe/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "flower-care-fe:build:production"
        },
        "development": {
          "browserTarget": "flower-care-fe:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "flower-care-fe:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/flower-care-fe/**/*.ts",
          "apps/flower-care-fe/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/flower-care-fe/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/flower-care-fe/.storybook",
        "browserTarget": "flower-care-fe:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/flower-care-fe",
        "configDir": "apps/flower-care-fe/.storybook",
        "browserTarget": "flower-care-fe:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c apps/flower-care-fe/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "flower-care-fe:build-storybook",
        "staticFilePath": "dist/storybook/flower-care-fe"
      },
      "configurations": {
        "ci": {
          "buildTarget": "flower-care-fe:build-storybook:ci"
        }
      }
    }
  }
}
