{
  "name": "my-bun-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/my-bun-app/src",
  "targets": {
    "build": {
      "executor": "@nx-bun/nx:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "entrypoints": ["apps/my-bun-app/src/main.ts"],
        "outputPath": "dist/apps/my-bun-app",
        "tsConfig": "apps/my-bun-app/tsconfig.app.json",
        "smol": false,
        "bun": true
      }
    },
    "serve": {
      "executor": "@nx-bun/nx:run",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "my-bun-app:build",
        "tsConfig": "apps/my-bun-app/tsconfig.app.json",
        "watch": true,
        "hot": true,
        "bun": true,
        "smol": false
      }
    },
    "test": {
      "executor": "@nx-bun/nx:test",
      "options": {
        "smol": false,
        "bail": true,
        "tsConfig": "apps/my-bun-app/tsconfig.json",
        "bun": true
      }
    }
  }
}
